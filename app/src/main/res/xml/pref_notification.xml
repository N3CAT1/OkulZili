<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
    <RingtonePreference
        android:defaultValue="content://settings/system/ringtone_sound"
        android:key="zil_sesi_giris"
        android:ringtoneType="ringtone"
        android:summary="Giriş zili çaldığında çalınacak ses"
        android:title="Giriş Zili" />

    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
    <RingtonePreference
        android:defaultValue="content://settings/system/ringtone"
        android:key="zil_sesi_cikis"
        android:ringtoneType="ringtone"
        android:summary="Çıkış zili çaldığında çalınacak ses"
        android:title="Çıkış Zili" />

    <RingtonePreference
        android:defaultValue="content://settings/system/ringtone"
        android:key="zil_sesi_ogretmen"
        android:ringtoneType="ringtone"
        android:summary="Öğretmen zili çaldığında çalınacak ses"
        android:title="Öğretmen Zili" />

    <EditTextPreference
        android:defaultValue="10"
        android:key="zil_suresi"
        android:summary="Zilin çalma süresi"
        android:title="Zil Süresi"
        android:inputType="numberDecimal" />


</PreferenceScreen>
